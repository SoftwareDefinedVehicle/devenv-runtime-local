{
    "alias": "local",
    "components": [
        {
            "type": "runtime",
            "start": [
                {
                    "id": "ensure-dapr",
                    "program": "./src/ensure-dapr.sh"
                },
                {
                    "id": "run-mosquitto",
                    "program": "./src/run-mosquitto.sh",
                    "dependsOn": "ensure-dapr",
                    "startupLine": "mosquitto version 2.0.14 running"
                },
                {
                    "id": "run-vehicledatabroker",
                    "program": "./src/run-vehicledatabroker.sh",
                    "dependsOn": "run-mosquitto",
                    "startupLine": "You're up and running! Dapr logs will appear here."
                },
                {
                    "id": "run-feedercan",
                    "program": "./src/run-feedercan.sh",
                    "dependsOn": "run-vehicledatabroker"
                },
                {
                    "id": "run-vehicleservices",
                    "program": "./src/run-vehicleservices.sh",
                    "dependsOn": "run-vehicledatabroker"
                }
            ],
            "stop": [
                {
                    "id": "stop-all",
                    "program": "./src/stop.sh"
                }
            ],
            "variables": [
                {
                    "name": "myVar",
                    "type": "string",
                    "description": "some basic description"
                }
            ]
        }
    ]
}
